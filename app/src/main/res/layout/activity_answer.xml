<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="lps2ima.kouize.controller.AnswerActivity">

    <TextView
        android:id="@+id/answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/isTrue"
        android:padding="20dp"
        android:textSize="12dp"
        android:text="ceci est la réponse"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="30dp"
        android:textColor="@color/white"
        android:fontFamily="monospace"
        android:gravity="center"/>

    <TextView
        android:id="@+id/isTrue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="20dp"
        android:textSize="25dp"
        android:text="Répoooonse"
        android:textColor="@color/white"
        android:fontFamily="monospace"
        android:background="@drawable/my_border_answer"
        android:gravity="center"/>

    <Button
        android:id="@+id/nextQuestion"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorAccent"
        android:layout_alignParentEnd="true"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:fontFamily="monospace"
        android:text="Question Suivante"
        />

    <TextView
        android:id="@+id/anecdote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/answer"
        android:layout_above="@id/nextQuestion"
        android:fontFamily="monospace"
        android:text="Ceci est une anecdote"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:textSize="15dp"
        android:gravity="center"/>
</android.widget.RelativeLayout>
